#!/bin/bash

case "$(pacmd list | grep 'active port:' | grep 'output' | awk -F '-' '{print $NF}')" in
    "speaker>") output="Speakers" ;;
    "headphones>") output="Headphones" ;;
    *) exit 1 ;;
esac

function send_notification() {
	volume=$(pulsemixer --get-volume | awk '{print $1}')
	dunstify  -u low -r "9993" -h int:value:"$volume" -i "volume-$1" "Volume [$output]: ${volume}%"
}

case $1 in
up)
	# Set the volume on (if it was muted)
	pulsemixer --unmute
	amixer set Master 5%+
	send_notification $1
	;;
down)
	pulsemixer --unmute
	amixer set Master 5%-
	send_notification $1
	;;
mute)
	pulsemixer --toggle-mute
	if [ $(pulsemixer --get-mute) = 1 ]; then
		dunstify -i volume-mute -r 9993 -u low "Muted"
	else
		send_notification up
	fi
	;;
esac

