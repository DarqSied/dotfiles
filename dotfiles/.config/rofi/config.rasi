configuration {
    display-drun: "";
    display-run: "î§©";
    display-window: "#";
    drun-display-format: "{name}";
    font: "Hack Nerd Font 13";
    modi: "window,run,drun,combi,emoji";
    sorting-method: "fzf";
    cycle: false;
    auto-select: true;
    scroll-method: 1;
    icon-theme: "Papirus";
    disable-history: true;
}

@theme "/dev/null"

* {
    foreground: #f8f8f2;
    background-color: #282a36cc;
    active-background: #44475a77;
    urgent-background: #ff555577;
    selected-background: #bd93f977;
    selected-urgent-background: #ffb86c55;
    selected-active-background: @selected-background;
    separatorcolor: @background-color;
    bordercolor: @active-background;
}

listview {
    lines: 20;
}

