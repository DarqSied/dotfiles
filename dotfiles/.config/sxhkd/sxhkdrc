#
# wm independent hotkeys
#

# terminal emulator
super + Return
	$TERMINAL

# rofi menus
super + r
	rofi -show combi -combi-modi "window,drun" -modi combi -show-icons

super + shift + r
    rofi -modi "run" -show run

super + v
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

super + shift + v
    rofi -modi "emoji" -show emoji

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# My program Hotkeys
super + b
	brave

super + shift + b
    brave --incognito

super + e
	thunar

super + shift + e
    $TERMINAL -e ranger

super + a
    spotify

super + c
    kitty -e htop

Print
	flameshot full -p ~/Himanshu/Data/Backup/Screenshots

ctrl + Print
	flameshot gui -p ~/Himanshu/Data/Backup/Screenshots

alt + Print
    flameshot screen -p ~/Himanshu/Data/Backup/Screenshots


#
# bspwm hotkeys
#

# lockscreen
#super + alt + b
#    betterlockscreen -l blur

# quit/restart bspwm
#super + alt + {q,r}
#	bspc {quit,wm -r}

super + alt + r
    bspc wm -r

super + alt + x
    rofi -show powermenu -modi powermenu:~/.local/bin/powermenu

# close and kill
super + x
	bspc node -{c,k}

super + q
    bspc node -c

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window


#
# state/flags
#

# set the window state
super + {t,shift + t,f}
	bspc node -t {tiled,pseudo_tiled,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# toggle floating on and off
super + s
    bspc node focused.tiled -t floating || bspc node focused.floating -t tiled


#
# focus/swap/send/insert
#

# focus or swap with the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the last node/desktop
super + {_,alt + }Tab
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# send & follow to the given desktop
super + alt + shift + {1-9,0}
    bspc node -d '^{1-9,10}' --follow

# rotate the tree from the current nodes parent
super + ctrl + {Right, Left}
	bspc node @parent --rotate {90,270}

# close all receptacle
super + ctrl + q
    for win in `bspc query -N -n .leaf.\!window`; do bspc node $win -k ; done;

# insert receptacle
super + ctrl + {h,j,k,l}
    bspc node --presel-dir {west,south,north,east} -i

# move to receptacle
super + i
    bspc node $(bspc query -N -n focused) -n $(bspc query -N -n .leaf.\!window)

# balance nodes
super + u
    bspc node @/ -B


#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


#
# system controls
#

# volume control
XF86AudioLowerVolume
	amixer set Master 5%-

XF86AudioRaiseVolume
	amixer set Master 5%+

XF86AudioMute
    amixer -D pulse set Master 1+ toggle

XF86AudioPlay
    playerctl play-pause

XF86AudioStop
    playerctl stop

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

# brightness control
XF86MonBrightnessUp
    xbacklight -inc 10

XF86MonBrightnessDown
    xbacklight -dec 10

# notification control
super + grave
    dunstctl close

super + alt + grave
    dunstctl close-all

super + shift + grave
    dunstctl history-pop

super + ctrl + grave
    dunstctl set-paused toggle
